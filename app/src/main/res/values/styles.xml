<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- DatePicker Dialog Theme. -->
    <style name="datePickerTheme" parent="android:Theme.DeviceDefault.Light">
        <item name="android:backgroundTint">@color/blueBI</item>
        <item name="android:textColorPrimary">@color/whiteBI</item>
        <item name="android:textColorSecondary">@color/whiteBI</item>
        <item name="android:textColor">@color/whiteBI</item>
    </style>
</resources>
